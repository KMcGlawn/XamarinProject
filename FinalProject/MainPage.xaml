        <Button Text="18" Clicked="NavigateButton_OnClicked" Grid.Row="5" Grid.Column="7" Grid.ColumnSpan="1" TextColor="White" BackgroundColor="Gray" />
        <Button Text="19" Clicked="NavigateButton_OnClicked" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="1" TextColor="White" BackgroundColor="Gray" />
        <Button Text="20" Clicked="NavigateButton_OnClicked" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="1" TextColor="White" BackgroundColor="Gray" />
        <Button Text="21" Clicked="NavigateButton_OnClicked" Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="1" TextColor="White" BackgroundColor="Gray" />
