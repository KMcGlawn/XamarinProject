        <Button Text="11" Clicked="NavigateButton_OnClicked" Grid.Row="4" Grid.Column="7" Grid.ColumnSpan="1" TextColor="White" BackgroundColor="Gray" />
        <Button Text="12" Clicked="NavigateButton_OnClicked" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="1" TextColor="White" BackgroundColor="Gray" />
        <Button Text="13" Clicked="NavigateButton_OnClicked" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="1" TextColor="White" BackgroundColor="Gray" />
        <Button Text="14" Clicked="NavigateButton_OnClicked" Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="1" TextColor="White" BackgroundColor="Gray" />
