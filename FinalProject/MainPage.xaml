        <Button Text="25" Clicked="NavigateButton_OnClicked" Grid.Row="6" Grid.Column="7" Grid.ColumnSpan="1" TextColor="White" BackgroundColor="Gray" />
        <Button Text="26" Clicked="NavigateButton_OnClicked" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="1" TextColor="White" BackgroundColor="Gray" />
        <Button Text="27" Clicked="NavigateButton_OnClicked" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="1" TextColor="White" BackgroundColor="Gray" />
        <Button Text="28" Clicked="NavigateButton_OnClicked" Grid.Row="7" Grid.Column="3" Grid.ColumnSpan="1" TextColor="White" BackgroundColor="Gray" />
